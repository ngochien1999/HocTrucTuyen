
@{
    ViewBag.Title = "Quản lý học viên";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
    int dem = 1;
}


@model PagedList.IPagedList<HocTrucTuyen.Models.Entity.User>
@using PagedList.Mvc

@section jsFooter{

    <script type="text/javascript">

        $('.btnInfoUser').click(function () {
            window.location.href = "/Admin/User/Info/" + $(this).data('id');
        });


    </script>
}



<div id="page-wrapper" style="min-height: 356px;">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Quản lý học viên</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    @*<div class="panel-heading">
                            DataTables Advanced Tables
                        </div>*@
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="table-responsive">
                            <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                                <div class="row">
                                    <div class="col-sm-6" style="margin-bottom: 10px;">
                                        <div class="right">
                                            @*<button class="btn btn-success btnAddFeedback"><i class="fa fa-plus"></i>Thêm mới</button>*@
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-12">
                                        <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" role="grid" aria-describedby="dataTables-example_info">
                                            <thead>
                                                <tr role="row">
                                                    <th class="sorting_asc text-center" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" style="width: 20px;">
                                                        STT
                                                    </th>
                                                    <th class="sorting text-center" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending" style="width: 209px;">
                                                        Họ và tên
                                                    </th>
                                                    <th class="sorting text-center" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Platform(s): activate to sort column ascending" style="width: 192px;">
                                                        Email
                                                    </th>
                                                    <th class="sorting text-center" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Platform(s): activate to sort column ascending" style="width: 192px;">
                                                        Ngày sinh
                                                    </th>
                                                    <th class="sorting text-center" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Platform(s): activate to sort column ascending" style="width: 192px;">
                                                        Số điện thoại
                                                    </th>
                                                    <th class="sorting text-center" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Platform(s): activate to sort column ascending" style="width: 192px;">
                                                        Địa chỉ
                                                    </th>
                                                    <th tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="CSS grade: activate to sort column ascending" style="width: 103px;">

                                                    </th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model)
                                                {

                                                    <tr class="gradeA odd" role="row">
                                                        <td class="sorting_1">@dem</td>
                                                        <td>@item.FullName</td>
                                                        <td class="text-center">@item.Email</td>
                                                        <td class="text-center">@item.BirthDay</td>
                                                        <td class="text-center">@item.Phone</td>
                                                        <td class="text-center">@item.Address</td>
                                                        <td class="center text-center">
                                                            <button class="btn btn-primary btnInfoUser" title="Xem điểm thi học viên" data-id="@item.ID"><i class="fa fa-info"></i></button>
                                                        </td>
                                                    </tr>
                                                    dem++;

                                                }

                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                            </div>
                        </div>

                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>





