@{
    ViewBag.Title = "Sửa bài giảng";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
    var detail = ViewBag.detail as HocTrucTuyen.Models.Entity.Course_Detail;
}

<div id="page-wrapper" style="min-height: 356px;">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Sửa bài giảng cho khóa học: <span style="color: blue">@detail.Course.Title</span></h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Sửa bài giảng
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-6">
                                @using (Html.BeginForm("Edit", "Course_Detail", FormMethod.Post, new { id = "frmAddCourse", enctype = "multipart/form-data" }))
                                {
                                    <input type="hidden" name="ID" value="@detail.ID" />
                                    <div class="form-group">
                                        <label>Tên bài giảng</label><span style="color:red">(*)</span>
                                        <input type="text" class="form-control" value="@detail.Name" name="Name" placeholder="Nhập tiêu đề">
                                    </div>
                                    <div class="form-group">
                                        <label>Link Youtube</label><span style="color:red">(*)</span>
                                        <input type="text" class="form-control" value="@detail.Link" name="Link" placeholder="Nhập link youtube" />
                                    </div>
                                    <div class="form-group">
                                        <label>Nội dung </label><span style="color:red">(*)</span>
                                        <textarea name="Descriptions" id="text_Description" rows="6" placeholder="Nhập nội dung" class="form-control">
                                        @detail.Descriptions
                                        </textarea>
                                    </div>

                                    <button type="submit" class="btn btn-default">Sửa</button>
                                }

                            </div>

                        </div>
                        <!-- /.row (nested) -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>

@section jsFooter{

    <script type="text/javascript">

        $(document).ready(function () {
            CKEDITOR.replace('text_Description');
            //validate form
            $("#frmAddCourse").validate({
                rules: {
                    Name: "required",
                    Link: "required",
                    Descriptions: "required"
                },
                messages: {
                    Name: "Vui lòng nhập tên bài giảng",
                    Link: "Vui lòng nhập link youtube",
                    Descriptions: "Vui lòng nhập nội dung"
                }
            });
        })


    </script>
}




