@{
    ViewBag.Title = "Thêm khóa học";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
    var teacher = ViewBag.Teacher as List<HocTrucTuyen.Models.Entity.Teacher>;
}

<div id="page-wrapper" style="min-height: 356px;">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Thêm khóa học</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Thêm khóa học
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-6">
                                @using (Html.BeginForm("add", "Course", FormMethod.Post, new { id = "frmAddCourse", enctype = "multipart/form-data" }))
                                {
                                    <div class="form-group">
                                        <label>Tiêu đề</label><span style="color:red">(*)</span>
                                        <input type="text" class="form-control" name="Title" placeholder="Nhập tiêu đề">
                                    </div>
                                    <div class="form-group">
                                        <label>Giáo viên soạn</label><span style="color:red">(*)</span>
                                        <select class="form-control" name="Teacher_ID">
                                            @foreach (var item in teacher)
                                            {
                                                <option value="@item.ID">@item.Name</option>

                                            }
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label>Hình ảnh</label><span style="color:red">(*)</span>
                                         <input type="file" name="Image" />
                                    </div>
                                    <div class="form-group">
                                        <label>Nội dung</label><span style="color:red">(*)</span>
                                        <textarea name="Description" id="text_Description" rows="6" placeholder="Nhập nội dung" class="form-control">
                                        </textarea>
                                    </div>

                                    <button type="submit" class="btn btn-default">Thêm mới</button>
                                }

                            </div>

                        </div>
                        <!-- /.row (nested) -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>

@section jsFooter{

    <script type="text/javascript">

        $(document).ready(function () {

            CKEDITOR.replace('text_Description');

            //validate form
            $("#frmAddCourse").validate({
                rules: {
                    Title: "required",
                    Image: "required",
                    Description: "required"
                },
                messages: {
                    Title: "Vui lòng nhập tiêu đề",
                    Image: "Vui lòng chọn hình ảnh",
                    Description: "Vui lòng nhập nội dung"
                }
            });
        })


    </script>
}


