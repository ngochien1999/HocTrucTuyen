
@{
    ViewBag.Title = "Kết quả trắc nghiệm";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
    int dem = 1;
    var user = ViewBag.User as HocTrucTuyen.Models.Entity.User;
}

@model PagedList.IPagedList<HocTrucTuyen.Models.Entity.Test>
@using PagedList.Mvc


<div id="page-wrapper" style="min-height: 356px;">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Điểm thi học viên: <span style="color:blue">@user.FullName</span></h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    @*<div class="panel-heading">
                            DataTables Advanced Tables
                        </div>*@
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="table-responsive">
                            <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                                <div class="row">
                                    <div class="col-sm-6" style="margin-bottom: 10px;">
                                        <div class="right">
                                            @*<button class="btn btn-success btnAddFeedback"><i class="fa fa-plus"></i>Thêm mới</button>*@
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-12">
                                        <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" role="grid" aria-describedby="dataTables-example_info">
                                            <thead>
                                                <tr role="row">
                                                    <th class="sorting_asc text-center" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" style="width: 20px;">
                                                        STT
                                                    </th>
                                                    <th class="sorting text-center" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending" style="width: 209px;">
                                                        Thể loại thi
                                                    </th>
                                                    <th class="sorting text-center" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Platform(s): activate to sort column ascending" style="width: 192px;">
                                                        Kết quả
                                                    </th>
                                                    <th class="sorting text-center" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Platform(s): activate to sort column ascending" style="width: 192px;">
                                                        khóa học
                                                    </th>
                                                    <th class="sorting text-center" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Platform(s): activate to sort column ascending" style="width: 192px;">
                                                        Ngày thi
                                                    </th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model)
                                                {
                                                   
                                                <tr class="gradeA odd" role="row">
                                                    <td class="sorting_1">@dem</td>
                                                    @if (item.Category == 1)
                                                    {
                                                        <td>Trắc nghiệm</td>

                                                    }
                                                    <td class="text-center">@item.Result</td>
                                                    <td class="text-center">@item.Course.Title</td>
                                                    <td class="text-center">@item.CreatedDate.Value.ToString("hh:mm dd/MM/yyyy")</td>

                                                </tr>
                                                        dem++;
                                                }

                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                            </div>
                        </div>

                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>





